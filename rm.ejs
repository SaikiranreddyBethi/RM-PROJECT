<html>
<head>
    <style>
    .always
    {
        background:none;
        border:2px solid #a3c6ff;
        border-radius:10px;
        padding:7px;
    }
    </style>
    
 <script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous">
 </script>
 <script>
     $(document).ready(function(){
         $('.up').on("click",function(){
            var id = $(this).attr('id');
            var curr=$(this).attr('value');
            req= $.ajax({
                
                url: '/upvoted',
                type: 'POST',
                data: {id: id,val: curr}
                });
         location.reload(true);   
         });
         
     });
     $(document).ready(function(){
         $('.down').on("click",function(){
            var id = $(this).attr('id');
            var curr=$(this).attr('value');
            req= $.ajax({
                
                url: '/downvoted',
                type: 'POST',
                data: {id: id,val: curr}
                });
         location.reload(true);    
         });
     });
 </script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<title>Comments</title>
</head>
<body>
    <div style="margin-top:50px">
<div class="container">
    <h1>Comments</h1>
    
<form method="post" action="/">
<input type="text" name="auth" class="form-group form-control" required placeholder="Your Name"><br>
<textarea name="txtcom" class="form-group form-control" required placeholder="Comments"></textarea><br>
<button type="submit" class="btn btn-primary">Post Comment</button><br>
</form>
</div>
<br>
<div class="container">

    <% for(var i=0;i<comnt.length;i++) 
    {
    %>
    <div class="always" >
        <p><strong><%= comnt[i].name %></strong></p>
        <p><%= comnt[i].body %></p>
       <i id="<%= comnt[i]._id %>" class="up fa fa-thumbs-up" value="<%= comnt[i].upvote %>"  aria-hidden="true"></i>&nbsp;&nbsp;<label id="u_<%= comnt[i]._id %>" ><%= comnt[i].upvote %></label> &nbsp;&nbsp;&nbsp;
       <i id="<%= comnt[i]._id %>" class="down fa fa-thumbs-down" value="<%= comnt[i].upvote %>" aria-hidden="true"></i>&nbsp;&nbsp;<label id="d_<%= comnt[i]._id %>"><%= comnt[i].downvote %></label>
    </div>
     <br>
     <%
     }
     %>
     </div>
</div>
</div>
</body>
</html>
